root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.js]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[**.rb]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space
